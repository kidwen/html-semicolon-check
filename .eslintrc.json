{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        // 缩进：4 空格
        "indent": [
            "error",
            4
        ],
        // 大括号首尾空格
        "object-curly-spacing": [
            "error",
            "always",
            {
                "arraysInObjects": false
            }
        ],
        // 禁用单行最大长度
        "max-len": "off"
    }
}